
@{
    ViewBag.Title = "Spells";
}

<h2>Spells</h2>



    @using (Html.BeginForm("Spells", "Creatures", FormMethod.Post))
    {
        <div class="form-group">
            <div class="search">
                @Html.TextBox("SpellName", null, new { @class = "form-control", type = "text" })
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>
    }
    <div class="container">
        @if (ViewBag.Success == true)
        {
            foreach (var item in ViewBag.SpellsList)
            {
                string spell = item.ToString();
                <h4>@spell</h4>
            }

        }
    </div>


