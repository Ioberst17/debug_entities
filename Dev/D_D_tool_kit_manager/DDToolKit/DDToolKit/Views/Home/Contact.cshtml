
<h3>@ViewBag.Message</h3>

<link href="~/Content/contactform.css" rel="stylesheet" type="text/css" />
<div class="container">
    <form id="contact" action="" method="post">
        <h3>Contact Form</h3>
        <h4>Send us an email us a message and we will get back to you as soon as possible</h4>
        <fieldset>
            <input placeholder="Your name" type="text" tabindex="1" autofocus>
        </fieldset>
        <fieldset>
            <input placeholder="Your Email Address" type="text" tabindex="2" >
        </fieldset>
        <fieldset>
            <input placeholder="Your Phone Number" type="text" tabindex="3" >
        </fieldset>
        <fieldset>
            <textarea placeholder="Type your Message Here...." type="text" tabindex="5" ></textarea>
        </fieldset>
        <fieldset>
            <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
        </fieldset>
    </form>


</div>