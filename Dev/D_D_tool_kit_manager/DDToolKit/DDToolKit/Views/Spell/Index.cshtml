

@{
    ViewBag.Title = "Spells";
}

@using (Html.BeginForm("Index", "Spell", FormMethod.Post))
{
    <div class="form-group">
        <div class="search">
            @Html.TextBox("spellName", null, new { @class = "form-control", type = "text" })
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
}
<div class="container">
    @if (ViewBag.Success == true)
    {
        foreach (var item in ViewBag.spellList)
        {
            string Spell = item.ToString();
            <h4><a href="/Spell/spellInfo?spellName=@Spell">@Spell</a></h4>
        }

    }
</div>
