@model  DDToolKit.Models.Magic


@{
    ViewBag.Title = "Spells";
}

@using (Html.BeginForm("Index", "Spell", FormMethod.Post))
{
    <div class="row">
        <h2>Wlcome to the spell Page!</h2>
        <div class="col-lg-4">

        </div>
        <div class="col-lg-4">
                <div class="form-group ">
                    <div class="search text-center">
                        @Html.TextBox("spellName", null, new { @class = "form-control", type = "text", placeholder = "Search for a spell name", id = "SmartSpell" })
                    </div>  
                </div>
        </div>
        <div class="col-lg-4">
            <button class="btn btn-primary" type="submit"> Search </button>
        </div>
        
        
    </div>

}
<div class="container">
    @if (ViewBag.Success == true)
    {
        foreach (var item in ViewBag.spellList)
        {
            string Spell = item.ToString();
    <h4 style="text-align:center"><a style="color:black" href="/Spell/spellInfo?spellName=@Spell">@Spell</a></h4>
        }

    }
</div>

@section scripts{
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Scripts/autoCompleteSpells.js"></script>

}