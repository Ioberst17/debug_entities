@model  DDToolKit.Models.Magic


@{
    ViewBag.Title = "Spells";
}

@using (Html.BeginForm("Index", "Spell", FormMethod.Post))
{
    <div class="form-group">
        <div class="search">
            @Html.TextBox("spellName", null, new { @class = "form-control", type = "text", id = "SmartSpell" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
           


            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
}
<div class="container">
    @if (ViewBag.Success == true)
    {
        foreach (var item in ViewBag.spellList)
        {
            string Spell = item.ToString();
            <h4><a href="/Spell/spellInfo?spellName=@Spell">@Spell</a></h4>
        }

    }
</div>

@section scripts{
    <script type="text/javascript" src="~/Scripts/autoCompleteSpells.js"></script>
}